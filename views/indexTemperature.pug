extends layout

block content
    script(src="https://cdn.bootcss.com/echarts/4.2.0-rc.2/echarts.min.js")
    h1.title(style='font-size:4em;margin-bottom:5vh;')= title
    .container-fluid
        .row
            ul.nav.nav-pills
                li.active(role='presentation')
                    a(href='#') Light
                li(role='presentation')
                    button#open-led.btn.btn-success.btn-lg(type="button") Open
                li(role='presentation')
                    button#close-led.btn.btn-warning.btn-lg(type="button") Close
            <div class="clearfix" style="margin-bottom: 10px;"></div>
            ul.nav.nav-pills
                li.active(role='presentation')
                    a(href='#') Motor
                li(role='presentation')
                    button#turn-left.btn.btn-success.btn-lg(type="button") <-
                li(role='presentation')
                    button#turn-right.btn.btn-warning.btn-lg(type="button") ->
        <div class="clearfix" style="margin-bottom: 130px;"></div>
        .row
            .col-md-6.col-sm-6
                div#main(style="width: 100%;height:30vh;background-color: rgba(25,118,210,0.3);")
            .col-md-6.col-sm-6
                div#main1(style="width: 100%;height:30vh;background-color: rgba(25,118,210,0.3);")
            script(src="/javascripts/indexTemperature.js")